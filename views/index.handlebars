<h1>EAT-DA-BURGER!</h1>

<img src="/assets/img/burger_image.jpg" alt="big juicy burger">

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
      <div class="burger-container">
        {{this.id}}. {{this.burger_name}}
      </div>
      <div class="devour-container">
        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">DEVOUR!</button>
        </form>
      </div>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<div id="burger-wrapper">
<ul>
  {{#each burgers}}
    {{#if this.devoured}}
    <div class="consumed-container">
      <li>
        {{this.id}}. {{this.burger_name}}
      </li>
    </div>
    {{/if}}
  {{/each}}
</ul>
</div>

<form class="create-update-form" action="/" method="POST">
        <div class="form-group">
            <input type="textarea" id="ca" name="name">
        </div>
        <button type="submit" id="newBurger-submit">Add Burger</button>
        <h3>Create the Burger of your wildest dreams!</h3>
    </form>